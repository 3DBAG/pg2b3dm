<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <Version>0.4.4</Version>
    <Description>Tool for converting PostGIS geometries to B3dm tiles</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>0.4.4.0</AssemblyVersion>
    <FileVersion>0.4.4.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.6.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.2.0" />
    <PackageReference Include="Npgsql" Version="4.0.9" />
    <PackageReference Include="SharpGLTF.Toolkit" Version="1.0.0-alpha0011" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\b3dm.tileset\b3dm.tileset.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="testfixtures\sample_tileset.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
